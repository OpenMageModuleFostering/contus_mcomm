<?xml version="1.0"?>
<config>
    <modules>
        <Contus_Offers>
            <version>0.1.0</version>
        </Contus_Offers>
    </modules>
    <frontend>
        <routers>
            <offers>
                <use>standard</use>
                <args>
                    <module>Contus_Offers</module>
                    <frontName>offers</frontName>
                </args>
            </offers>
        </routers>
        <layout>
            <updates>
                <offers>
                    <file>offers.xml</file>
                </offers>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<offers>
				<use>admin</use>
				<args>
					<module>Contus_Offers</module>
					<frontName>offers</frontName>
				</args>
			</offers>
        </routers>
    </admin>
    <adminhtml>
		
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Contus_Offers>
							<title>Offers Module</title>
							<sort_order>10</sort_order>
						</Contus_Offers>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<offers>
					<file>offers.xml</file>
				</offers>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <offers>
                <class>Contus_Offers_Model</class>
                <resourceModel>offers_mysql4</resourceModel>
            </offers>
            <offers_mysql4>
                <class>Contus_Offers_Model_Mysql4</class>
                <entities>
                    <offers>
                        <table>mcomm_offers</table>
                    </offers>
                </entities>
            </offers_mysql4>
        </models>
        <resources>
            <offers_setup>
                <setup>
                    <module>Contus_Offers</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </offers_setup>
            <offers_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </offers_write>
            <offers_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </offers_read>
        </resources>
        <blocks>
            <offers>
                <class>Contus_Offers_Block</class>
            </offers>
        </blocks>
        <helpers>
            <offers>
                <class>Contus_Offers_Helper</class>
            </offers>
        </helpers>
    </global>
</config>